      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/settings" method="POST">
            <div class="form-group">
              <label for="nickname">Nickname</label>
              <input type="text" class="form-control" name="nickname">
            </div>
